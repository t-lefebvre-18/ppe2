{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Vocabulaire{% endblock %}

{% block contenu %}

  <div class="container">
  <br>
<div class="alert alert-red alert-dismissible fade show d-flex align-items-center shadow-sm" role="alert">
  <img class="mr-3" src="../img/notificationB.png" alt="" width="48" height="48">
  <div class="lh-100">
    <h6 class="mb-0 text-black lh-100">Innov Anglais disponible sur vos téléphones. </h6>
    <small>Depuis 2019</small>
  </div>
<button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
</div>

<h2>Information</h2>
    <div class="my-3 p-3 bg-white rounded shadow-sm">
         <h6 class="border-bottom border-gray pb-2 mb-0">Liste du vocabualaire</h6>
         <a type="button" class="btn btn-primary" href="admin_vocabulaire_ajout.html.twig" >Ajouter</a>
             <table class="table ">
  <thead>
    <tr>
      <th scope="col">Référence</th>
      <th scope="col">Libelle</th>
      <th scope="col">categorie</th>
      <th scope="col">Modifier</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>          
  <tbody>
        {% if not listeVocabulaire is empty %}
            {% for key,value in listeVocabulaire %}
              
            <tr>
      <th scope="row">{{ value.id }}</th>
      <td>{{ value.libelle }}</td>
      <td>{{ value.categorie }}</td>
      <td> <a href="admin_vocabulaire_modif.html.twig">modifier</a></td>
      <td> <a href="">supprimer</a></td>
      
    </tr>
      
      {% endfor %}
            {% else %}   
                <tr>
      <th scope="row" colspan="3">Aucun vocabulaire à afficher</th>
    </tr>
            {% endif %}
     
        </tbody>
</table>
          
      
    </div>

  </div>

{% endblock %}